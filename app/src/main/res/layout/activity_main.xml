<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C2DEDC"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/etS"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="12"
                android:gravity="center"
                android:inputType="text"
                android:shadowColor="#C2DEDC"
                android:text="student"
                android:textAlignment="center"
                android:textColorHighlight="#C2DEDC"
                android:textColorLink="#C2DEDC"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/swi1"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#C2DEDC"
                android:gravity="center|center_horizontal" />

            <TextView
                android:id="@+id/etG"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="12"
                android:gravity="center"
                android:inputType="text"
                android:shadowColor="#C2DEDC"
                android:text="grade"
                android:textAlignment="center"
                android:textColorHighlight="#C2DEDC"
                android:textColorLink="#C2DEDC"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tw_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="name:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="parent:"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="address:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="Mobile Phone:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="local phone:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="Parent's phone:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tw_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#CDC2AE"
            android:gravity="center"
            android:hint="active:"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#116A7B"
            android:backgroundTint="#116A7B"
            android:text="ADD"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>